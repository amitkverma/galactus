upstream dashboard {
    server 127.0.0.1:8888;
}

upstream reportsFrontEnd {
    server 127.0.0.1:8787;
}

server {
        root /var/www/charcoal-audit;
        index index.html index.htm;
        server_name audit.charcoaleats.com;

        location / {
                try_files $uri $uri/ /index.html?/$request_uri;
        }
}

server {

   listen 443;

    # the virtual host name of this
    server_name {{ site_name }};

    ssl on;
    ssl_certificate      /etc/ssl/charcoaleats.crt;
    ssl_certificate_key  /etc/ssl/charcoaleats.key;

    #enables all versions of TLS, but not SSLv2 or 3 which are weak and now deprecated.
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

	location / {
	     root /var/apps/current/public/reports;
             index index.html;
	}

	location /dashboard/authenticate {
		proxy_pass http://dashboard/authenticate;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection 'upgrade';
		proxy_set_header Host $host;
		proxy_cache_bypass $http_upgrade;
	}

	location /dashboard/api/reports {
		proxy_pass http://dashboard/api/reports;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection 'upgrade';
		proxy_set_header Host $host;
		proxy_cache_bypass $http_upgrade;
	}
}